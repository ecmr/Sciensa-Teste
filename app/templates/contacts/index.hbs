<h2>List</h2>
<div class="row">
{{#each model as |contact|}}
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{contact.emailaddress}}</h3>
            </div>
            <div class="panel-body">
                <p>E-mail: {{contact.emailaddress}}</p>
                <p>Message: {{contact.message}}</p>
            </div>
            <div class="panel-footer text-right">
              {{#link-to 'contacts.edit' contact.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
              <button class="btn btn-danger btn-xs" {{action 'deleteContact' contact}}>Delete</button>
            </div>          
        </div>
    </div>
{{/each}}
</div>